<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if page_title %}{{ page_title }} &mdash; {% endif %}{{ site_name }}</title>
    <link rel="stylesheet" href="{{ asset('/assets/shared/fa/css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/assets/site/css/style.css') }}">
    <script>
      window.addEventListener('load', () => {
        if (window.scrollY > 0) {
          document.querySelector('.header').classList.add('not-top')
        }
      });

      window.addEventListener('scroll', () => {
        if (window.scrollY > 0) {
          document.querySelector('.header').classList.add('not-top')
        } else {
          document.querySelector('.header').classList.remove('not-top')
        }
      })
    </script>
</head>
<body>

<div class="header">
    <h1>
        <a href="/">{{ site_name }}</a>
    </h1>

    <div class="nav">
        <a href="/about">About</a>
    </div>
</div>