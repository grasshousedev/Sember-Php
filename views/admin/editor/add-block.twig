<div class="add-block">
    <button class="toggle-block-list">
        <i class="fas fa-plus"></i>
    </button>

    <div class="block-list">
        {% for block in block_list %}
            <button type="button"
                    data-key="{{ block.key }}"
                    hx-post="/admin/api/post/{{ post.data.id }}/blocks/add/{{ block.key }}/{{ position }}"
                    hx-swap="outerHTML"
                    hx-target=".blocks">
                <i class="{{ block.icon }}"></i>
                <span class="name">{{ block.name }}</span>
            </button>
        {% endfor %}
    </div>
</div>