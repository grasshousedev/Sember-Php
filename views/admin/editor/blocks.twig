<div class="blocks">
    {% include 'admin/editor/add-block.twig' with {'position': 'beginning' } %}

    {% for block in blocks %}
        <div class="block {{ block.key }}-block" data-id="{{ block.id }}" data-block="{{ block.key }}">
            {{ block.render | raw }}
            {% include 'admin/editor/edit-block.twig' %}
        </div>

        {% include 'admin/editor/add-block.twig' with {'position': block.id } %}
    {% endfor %}
</div>