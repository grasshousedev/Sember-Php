<div class="sidebar">
    <ul class="nav">
        {% for k, post_type in post_types %}
        <li {% if active is same as 'posts' and post_type_key is same as k %} class="active" {% endif %}>
            <a href="/admin/posts?type={{ k }}">
                <i class="{{ post_type.icon }}"></i>
            </a>
        </li>
        {% endfor %}
    </ul>

    <ul class="nav bottom">
        <li {% if active is same as 'settings' %} class="active" {% endif %}>
            <a href="/admin/settings"><i class="fas fa-cog"></i></a>
        </li>

        <li>
            <a href="{{ url }}" target="_blank">
                <i class="fas fa-link"></i>
            </a>
        </li>
    </ul>
</div>