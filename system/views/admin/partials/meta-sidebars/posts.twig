<div class="sidebar-meta">
    <h1>
        Posts
        <a href="/admin/posts/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add
        </a>
    </h1>

    <div class="section">
        <label>
            <span class="title">Filter by status</span>
            <select name="status" onchange="filterByStatus(this);">
                <option value="all" {% if filter_by_status is same as 'all' %} selected {% endif %}>All</option>
                <option value="published" {% if filter_by_status is same as 'published' %} selected {% endif %}>Published</option>
                <option value="draft" {% if filter_by_status is same as 'draft' %} selected {% endif %}>Draft</option>
            </select>
        </label>
    </div>

    <div class="section">
        <label>
            <span class="title">Sort by</span>
            <select name="status" onchange="sortBy(this);">
                <option value="title" {% if sort_by is same as 'title' %} selected {% endif %}>Title</option>
                <option value="status" {% if sort_by is same as 'status' %} selected {% endif %}>Status</option>
                <option value="published_at" {% if sort_by is same as 'published_at' %} selected {% endif %}>Published at</option>
                <option value="created_at" {% if sort_by is same as 'created_at' %} selected {% endif %}>Created at</option>
                <option value="views" {% if sort_by is same as 'views' %} selected {% endif %}>Views</option>
            </select>
        </label>
    </div>

    <div class="section">
        <label>
            <span class="title">Order</span>
            <select name="status" onchange="orderBy(this);">
                <option value="asc" {% if sort_order is same as 'asc' %} selected {% endif %}>Ascending</option>
                <option value="desc" {% if sort_order is same as 'desc' %} selected {% endif %}>Descending</option>
            </select>
        </label>
    </div>
</div>